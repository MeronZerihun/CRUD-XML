@model Notes.Models.Note

@{
    ViewBag.Title = "Edit";
}
<h2>Edit</h2>

@using (Html.BeginForm("Update", "Home", FormMethod.Post) ){
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model=>model.id)
    <div class="container">
        
        <hr/>
        
        <div class="form-group">
            <p>Title</p>
            <div>
                @Html.TextAreaFor(model=>model.title, new { @class = "form-control"})
                
            </div>
        </div>
        <div class="form-group">
            <p>Body</p>
            <div >
                @Html.TextBoxFor(model=>model.body,  new { @class = "form-control"})
            </div>
        </div>
        <br/>
        <div class="form-group">
            <input type="submit" value="Submit" class="btn btn-success" style=" width: 17%; display: block; margin: auto"/>
        </div>
        
    </div>
}

