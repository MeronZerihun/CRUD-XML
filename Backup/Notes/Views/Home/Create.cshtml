@model Notes.Models.Note


@{
    ViewBag.Title = "Create";
}
<h2>Create</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    <div class="container">
        
        <hr/>
        
        <div class="form-group">
            <p>Title</p>
            <div>
                @Html.TextAreaFor(model=>model.title, new { @class = "form-control"})
               
            </div>
        </div>
        <div class="form-group">
            <p>Body</p>
            <div >
                @Html.TextBoxFor(model=>model.body,  new { @class = "form-control"})
            </div>
        </div>
        <br/>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-success" style=" width: 17%; display: block; margin: auto"/>
        </div>
        
    </div>
}

